@model PricesComparationWeb.Models.Brand

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Brand</h4>
    <hr />


    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
</div>
<div>
    <table>
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(p => p.Products)
                </th>
            </tr>

            @foreach (var item in Model.Products)
            {
                <tr>
                    <th scope="col" width="250">
                        @Html.DisplayNameFor(modelItem => item.Name)
                    </th>
                    <th width="150">
                        @Html.DisplayNameFor(modelItem => item.Typed)
                    </th>
                </tr>
            }
        </thead>
        <tbody>
            @foreach (var item in Model.Products)
            {

                <tr>
                    <td scope="row" width="250">
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td scope="row" width="150">
                        @Html.DisplayFor(modelItem => item.Typed)
                    </td>
                </tr>

            }
        </tbody>
    </table>
</div>
<div>
    <a class="btn btn-dark" asp-action="Edit" asp-route-id="@Model.Id">Editar</a>
    <a class="btn btn-dark" asp-action="Index">Voltar à Lista</a>
    <p>
        <a asp-action="Delete" asp-route-id="@Model.Id" class="btn btn-dark">Delete</a>
        <a asp-controller="Products" asp-action="Create" class="btn btn-dark">Novo Produto</a>
    </p>
</div>

