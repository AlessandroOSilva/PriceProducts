@model PricesComparationWeb.Models.Brand

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this with ALL PRODUCTS?</h3>
<div>
    <h4>Brand</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
    </dl>
    <h4>Products</h4>
    <hr />
    @foreach (var p in Model.Products)
    {
        <table id="tableDelete">
            <thead>
                <tr>
                    <th scope="col" width="250">
                        @Html.DisplayNameFor(modelItem => p.Name)
                    </th>
                    <th width="150">
                        @Html.DisplayNameFor(modelItem => p.Typed)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Products)
                {

                    <tr>
                        <td scope="row" width="250">
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td scope="row" width="150">
                            @Html.DisplayFor(modelItem => item.Typed)
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    }

    <form asp-action="Delete" id="deleteConfirm">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index" class="btn btn-dark">Back to List</a>
    </form>
</div>
